{
  "name": "tmr-ide",
  "version": "3.5.10",
  "private": true,
  "description": "Testmate electron app",
  "author": "Testmate",
  "homepage": "https://example.com/testmate",
  "license": "Apache-2.0",
  "scripts": {
    "start": "electron src/main/index.js",
    "build": "yarn install-chromedriver && electron-builder -c.electronVersion $(node -e \"console.log(require('electron/package.json').version)\") --publish never",
    "install-chromedriver": "mkdir -p files && node scripts/download-driver.js"
  },
  "main": "src/main/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://example.com/testmate.git"
  },
  "bugs": {
    "url": "https://example.com/testmate/issues"
  },
  "build": {
    "appId": "org.seleniumhq.selenium-ide",
    "productName": "Testmate",
    "asarUnpack": "files/*",
    "mac": {
      "target": "dmg",
      "category": "public.app-category.developer-tools",
      "darkModeSupport": true
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "fileAssociations": [
      {
        "ext": "side",
        "name": "Testmate 3 project",
        "role": "Editor"
      },
      {
        "ext": "sideproj",
        "name": "Testmate project",
        "role": "Editor"
      }
    ]
  },
  "dependencies": {
    "tmr-get-driver": "^3.5.10",
    "selenium-webdriver": "^4.0.0-alpha.7"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.0.0",
    "electron": "^9.4.0",
    "electron-builder": "^21.2.0",
    "fs-extra": "^8.1.0"
  }
}
